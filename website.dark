    ([ Stdlib.Html.html 
        [("lang",Stdlib.Option.Option.Some "en")] 
        [ signupHead ()
          signupBody () 
        ] ]
    ) |> Stdlib.Html.document


let fillHomePage () : Int64 =
    let path = "public/index.html"

    let content = (doc ()) |> Stdlib.String.toBytes

    match Builtin.fileWrite content path with
    | Ok _ -> 0L
    | Error err ->
        Builtin.printLine err
        1L


let fillSignupPage () : Int64 =
    let path = "public/classic/signup.html"

    let content = (signupPage ()) |> Stdlib.String.toBytes

    match Builtin.fileWrite content path with
    | Ok _ -> 0L
    | Error err ->
        Builtin.printLine err
        1L


let main () : Int64 =
    let homePage = fillHomePage ()
    let signupPage = fillSignupPage ()

    if homePage == 0L && signupPage == 0L then
        0L
    else
        1L

main ()
